<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Aheadworks\Nmi\Block\Checkout\CollectJs" ifconfig="payment/aw_nmi/active" />
        </referenceContainer>
        <referenceBlock name="checkout_billing">
            <arguments>
                <argument name="form_templates" xsi:type="array">
                    <item name="aw_nmi" xsi:type="string">Aheadworks_Nmi::multishipping/form.phtml</item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

